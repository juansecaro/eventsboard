<header>
  <h1> <%= @user.organization_name %>'s event organized </h1>
  <ul class="actions">
    <li>
      <%= link_to "Start Event", new_event_path, class: "new" %>
    </li>
  </ul>
</header>
<% if @user.organized_events.any? %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Title</th>
        <th>Start Date</th>
        <th>End Date</th>
        <th>Event Status</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @user.organized_events.reverse.each do |event| %>
      <tr>
        <td><%= link_to event.title, event_path(event) %>  </td>
        <td><%= time_format(event.start_time) %>  </td>
        <td><%= time_format(event.end_time) %>  </td>
        
        <td>
          <%= link_to "Edit", edit_event_path(event), class: "edit" %>
          <%= link_to "Delete", event_path(event), method: :delete, data: {confirm: "Are you sure"}, class: "delete" %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <%else%>
    <p>
      <%= @user.organization_name %> has no events yet
    </p>
<% end %>
