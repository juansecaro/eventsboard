<div class="row">
	<div class="col-sm-8 col-sm-offset-2">



<%= simple_form_for(event) do |f| %>

	<%= f.input :title %>
	<%= f.input :description %>
	<%= f.input :start_time, as: :datetime, start_year: Date.today.year, ampm: true, order: [:day, :month, :year] %>
	<%= f.input :end_time, as: :datetime, start_year: Date.today.year, ampm: true, order: [:day, :month, :year] %>
	<%= f.input :venue %>
	<%= f.input :location %>
	<%= f.input :image, as: :file, label: "Upload event image" %>


	<%= f.button :submit, class: "btn btn-primary" %>
<% end %>


<%= link_to "Back to the events", events_path %>

	</div>
</div>
